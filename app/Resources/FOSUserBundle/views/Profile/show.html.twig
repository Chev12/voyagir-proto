{% extends "base.html.twig" %}

{% block body %}
    <h2>Informations personnelles</h1>
    <div style="width: 30%" >
        {% include "FOSUserBundle:Profile:show_content.html.twig" %}
    </div>
    <div>
        <h2>Mes Ã©tablissements</h1>

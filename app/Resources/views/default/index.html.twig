    <table class="table" style="width: 40%;">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Owner</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
        {% for e in establishments %}
            <tr>
                <td> {{ e.id }} </td>
                <td><a href="{{ path("etb_detail", { '_id' : e.id }) }}"> {{ e.name }} </a></td>
                <td> {{ e.userOwner.username }} </td>
                <td> 

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Engagements</h1>
    <table class="table" style="width: 20%;">
        <thead>
            <tr>
                <th>ID</th>
                <th>Description</th>
                <th>Icône</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
        {% for c in commitments %}
            <tr>
                <td> {{ c.id }} </td>
                <td><a href="{{ path("cmt_admin_update", { '_id' : c.id }) }}"> {{ c.description }} </a></td>
                <td> {{ c.icon }} </td>
                <td> 
                    {#<form action="{{ path("etb_manage_delete") }}">
                        <input type="hidden" name="idEtb" value="{{ e.id }}" />
                        <input type="submit" value="Supprimer" class="btn btn-primary" />
                    </form>#}
                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
            <a href="{{ path("cmt_admin_create") }}"> New </a>
        </tfoot>
    </table>
    <h1>Activités</h1>
    <table class="table" style="width: 20%;">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
        {% for act in activities %}
            <tr>
                <td> {{ act.id }} </td>
                <td><a href="{{ path("act_admin_update", { '_id' : act.id }) }}"> {{ act.name }} </a></td>
                <td> 
                    {#<form action="{{ path("etb_manage_delete") }}">
                        <input type="hidden" name="idEtb" value="{{ e.id }}" />
                        <input type="submit" value="Supprimer" class="btn btn-primary" />
                    </form>#}
                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
            <a href="{{ path("act_admin_create") }}"> New </a>
        </tfoot>
    </table>
{% endblock %}

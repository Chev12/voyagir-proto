<!DOCTYPE html>
<html>
    <head>
        
        <title>{% block title %}Welcome!{% endblock %}</title>
        
        <!-- Autre -->
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        
        <!-- Importations -->
        <script type="text/javascript" src="http://code.jquery.com/jquery-2.1.4.min.js" ></script>
        <script type="text/javascript" src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
        <script type="text/javascript" src="{{ asset('js/main.js') }}" ></script>
        <script type="text/javascript" src="{{ asset('js/facebook.js') }}" ></script>
        <link href="{{ asset('css/bootstrap.min.css') }}"
              rel="stylesheet" type="text/css" />
        <link href="{{ asset('css/bootstrap-social.css') }}"
              rel="stylesheet" type="text/css" />
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.2/css/font-awesome.min.css"
              rel="stylesheet" type="text/css">
        <link href="https://fonts.googleapis.com/css?family=Sue+Ellen+Francisco|Indie+Flower"
              rel="stylesheet" type="text/css" />
        <link href="{{ asset('css/style.css') }}" rel="stylesheet" type="text/css" />
        
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% include "banner.html.twig" %}
        
        {% include "menu.html.twig" %}
     
        <div id="page">
            <a href="javascript:;" class="menu-btn"></a>
            {% block body %}{% endblock %}
        </div>
        
        {% include("login_popup.html.twig") %}
        
        {% javascripts %}
            <script>
                $(document).ready(function() {
                // This command is used to initialize some elements and make them work properly
                $.material.init();
                });
            </script>
        {% endjavascripts %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
